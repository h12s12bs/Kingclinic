    <script type="text/javascript">

        $(document).ready(function() {
            $('#College').change(function() { ChangeCollege(); });
        });

        function submit() {
            //取值
            var SEX = $('#SEX').val();
            var AGE = $('#AGE').val();
            var WEIGHT = $('#WEIGHT').val();
            var HEIGHT = $('#HEIGHT').val();
            var KLSCALE = $('#KLSCALE').val();
            var GOAL1 = $('#GOAL1').val();
            var GOAL2 = $('#GOAL2').val();
            var GOAL3 = $('#GOAL3').val();
            var GOAL4 = $('#GOAL4').val();
