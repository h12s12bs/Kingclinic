<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

    <!-- PRE LOADER -->
    <section class="preloader">
        <div class="spinner">

            <span class="spinner-rotate"></span>

        </div>
    </section>






    <!-- MAKE AN APPOINTMENT -->
    <section id="appointment" data-stellar-background-ratio="3">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-sm-12">
                    <!-- CONTACT FORM HERE -->
                    <form id="appointment-form" role="form" method="post" action="Index">

                        <!-- SECTION TITLE -->
                        <div class="section-title wow fadeInUp" data-wow-delay="0.4s">
                            <h2><i class="fa fa-hospital-o"></i> OA knee Treatment Decision Aid</h2>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <h3>Informations:</h3>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label for="select"><i class="fa fa-intersex"></i>Sex:</label>
                            <select class="form-control" name="SEX">
                                <option value="男">Male</option>
                                <option value="女">Female</option>
                            </select>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label for="Age"><i class="fa fa-child"></i>Age:</label>
                            <input type="text" class="form-control" id="Age" name="AGE" placeholder="Age">
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label for="Weight"><i class='fas fa-weight'></i>Weight(kg):</label>
                            <input type="text" class="form-control" id="Weight" name="Weight" placeholder="Weight">
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label for="Height">Height(cm):</label>
                            <input type="text" class="form-control" id="Height" name="Height" placeholder="Height">
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label for="select">K-L Scale Grade:</label>
                            <select class="form-control" name="KLSCALE">
                                <option value="1">Grade 1</option>
                                <option value="2">Grade 2</option>
                                <option value="3">Grade 3</option>
                                <option value="4">Grade 4</option>
                            </select>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <h3>Goals:</h3>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="0.8s">
                            <div class="col-md-6 col-sm-6">
                                <label for="name">Goal 1:Max release of pain</label>
                                <select class="form-control" name="GOAL1">
                                    <option value="40">40%</option>
                                    <option value="50">50%</option>
                                    <option value="60">60%</option>
                                    <option value="70">70%</option>
                                    <option value="80">80%</option>
                                </select>
                                @*<input type="text" class="form-control" id="name" name="name" placeholder="%">*@
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <label for="email">Goal 2:Max function improvement</label>
                                <select class="form-control" name="GOAL2">
                                    <option value="3">3 weeks</option>
                                    <option value="6">6 weeks</option>
                                    <option value="12">12 weeks</option>
                                    <option value="26">26 weeks</option>
                                    <option value="36">36 weeks</option>
                                    <option value="48">48 weeks</option>
                                    <option value="52">52 weeks</option>
                                </select>
                                @*<input type="email" class="form-control" id="email" name="email" placeholder="Week">*@
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <label for="date">Goal 3:Min partial reimbursement</label>
                                <select class="form-control" name="GOAL3">
                                    <option value="10000">10,000</option>
                                    <option value="20000">20,000</option>
                                    <option value="30000">30,000</option>
                                    <option value="40000">40,000</option>
                                    <option value="50000">50,000</option>
                                    <option value="100000">100,000</option>
                                </select>
                                @*<input type="date" name="date" value="" class="form-control">*@
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <label for="select">Goal 4:Min wound infection</label>
                                <select class="form-control" name="GOAL4">
                                    <option value="0">0%</option>
                                    <option value="1.5">1.5%</option>
                                    <option value="2">2%</option>
                                </select>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label for="select">Goal 5:Min within three months</label>
                                <select class="form-control" name="GOAL5">
                                    <option value="3">3 monthes</option>
                                    <option value="6">6 monthes</option>
                                    <option value="9">9 monthes</option>
                                    <option value="12">12 monthes</option>
                                </select>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label for="select">Goal 6:Max non-surgery</label>
                                <select class="form-control" name="GOAL6">
                                    <option value="0">0%</option>
                                    <option value="25">25%</option>
                                    <option value="50">50%</option>
                                    <option value="70">70%</option>
                                    <option value="100">100%</option>
                                </select>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <h3>Constrains:</h3>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label for="quality">Improve the quality of life:</label>
                                <input type="text" class="form-control" id="quality" name="quality" placeholder="%">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label for="work">Return to work:</label>
                                <input type="text" class="form-control" id="work" name="work" placeholder="Days">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label for="Risk of anesthesia">Risk of anesthesia:</label>
                                <input type="text" class="form-control" id="Risk of anesthesia" name="Risk of anesthesia" placeholder="%">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label for="Reoperation">Reoperation:</label>
                                <input type="text" class="form-control" id="Reoperation" name="Reoperation" placeholder="%">
                            </div>
                            <div class="col-md-12 col-sm-12">
                                @*<label for="telephone">電話號碼</label>*@
                                @*<input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone">*@
                                @*<label for="Message">症狀概述</label>*@
                                @*<textarea class="form-control" rows="5" id="message" name="message" placeholder="Message"></textarea>*@
                                <button type="submit" class="form-control" id="cf-submit" name="Submit" onclick="Submit_click">Submit</button>
                            </div>

                        </div>
                    </form>
                </div>

                @*<div class="col-md-12 col-sm-12" style="text-align:center">*@
                @*<img src="~/images/KLSCALE.png" class="img-responsive" alt="" style="margin:auto">*@
                @*<p>(Source: LNMIA 10358, pp. 376)</p>*@
                @*</div>  *@


            </div>
        </div>
    </section>


    <!-- GOOGLE MAP -->
